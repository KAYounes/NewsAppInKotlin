<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="390dp"
    android:layout_height="115dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="5dp"
    app:cardCornerRadius="20dp"
    android:elevation="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/news_card_view_grad_bg"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/newsThumpNailCardView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/newsThumpNail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                tools:src="@drawable/newsthumpnail" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/newsHeadLine"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:maxHeight="70dp"
            android:textColor="@color/headlinesText"
            android:text="Unemployment rate reaches 2-year high of 6.9% in October, shows CMIE date; key things to know"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/newsThumpNailCardView"
            app:layout_constraintTop_toTopOf="@id/newsThumpNailCardView" />

        <TextView
            android:id="@+id/newsSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="@color/newsSourceText"
            android:text="edition.cnn.com â€¢ 1h"
            app:layout_constraintBottom_toBottomOf="@id/newsThumpNailCardView"
            app:layout_constraintStart_toEndOf="@id/newsThumpNailCardView" />

        <ImageView
            android:id="@+id/popUpMenue"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/popup_menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/newsHeadLine" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
